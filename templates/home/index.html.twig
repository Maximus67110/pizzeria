{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <div class="container">
        <div class="text-center mt-4">
            <h1>Pizza List</h1>
        </div>
        <div class="row mt-5 mb-4 mt-4">
            {% for pizza in pizzas %}
                <div class="col-md-6 col-lg-3 mb-3">
                    <a>
                        <div class="card" style="width: 18rem;">
                            <img src="{{ asset('uploads/' ~ pizza.image) }}" class="card-img-top" alt="{{ pizza.name }}">
                            <div class="card-body">
                                <h5 class="card-title">{{ pizza.name }}</h5>
                                <div class="card-text">
                                    <p>{{ (pizza.price/100)| format_currency('EUR',locale="fr") }}</p>
                                    <form method="post" action="{{ path('app_add_cart') }}" class="row">
                                        <div class="col input-group">
                                            <span class="input-group-text" id="basic-addon1">x</span>
                                            <input type="number" class="form-control" id="quantity" name="quantity">
                                            <input type="hidden" class="form-control" id="productId" name="productId" value="{{ pizza.id }}">
                                        </div>
                                        <div class="col">
                                            <button type="submit" class="btn btn-success">Add to cart</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
