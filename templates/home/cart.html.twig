{% extends 'base.html.twig' %}

{% block title %}Cart{% endblock %}

{% block body %}
    <div class="container mt-2">
        <a class="btn btn-outline-secondary" href="{{ path('app_home') }}">Back</a>
        <div class="text-center mt-4">
            <h1>Cart</h1>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Product</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for detail in cart %}
                    <tr>
                        <td>{{ detail.name }}</td>
                        <td>
                            <form method="post" action="{{ path('app_update_cart', { id: detail.id }) }}">
                                <div class="input-group">
                                    <input class="form-control" id="quantity" name="quantity" value="{{ detail.quantity }}">
                                    <button type="submit" class="btn btn-outline-warning">Update</button>
                                </div>
                            </form>
                        </td>
                        <td>
                            <a class="btn btn-outline-danger" href="{{ path('app_delete_cart', { id: detail.id }) }}">Delete</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
